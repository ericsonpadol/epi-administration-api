{
  "name": "epi-administration-api",
  "version": "1.0.0",
  "description": "ExpressPay Administration API",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix --max-warnings=30 .",
    "test": "jest --passWithNoTests .",
    "start:dev": "cross-env NODE_ENV=development PORT=8080 npm run lint && npm run test nodemon server.js",
    "start:sandbox": "cross-env NODE_ENV=sandbox PORT=8080 npm run make-cert && npm run lint && npm run test && nodemon server.js",
    "start": "cross-env NODE_ENV=production PORT=8080 node server.js",
    "make-cert": "openssl req -nodes -x509 -newkey rsa:4096 -keyout server.key -out server.cert -days 365 -subj /C=PH/ST=MANILA/L=MNL/O=TEAM/OU=OFFICE/CN=*.com"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "faker": "^5.4.0",
    "gulp": "^4.0.2",
    "gulp-apidoc": "^0.2.8",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "config": "^3.3.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "epi-data-entities": "^1.0.1",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "helmet": "^4.4.1",
    "lodash": "^4.17.21",
    "log4js": "^6.3.0",
    "luxon": "^1.26.0",
    "nocache": "^2.1.0",
    "uuid": "^8.3.2"
  }
}
